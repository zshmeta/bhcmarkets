{
  "name": "@repo/backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed_admin.ts && tsx scripts/seed_market_maker.ts",
    "seed:admin": "tsx scripts/seed_admin.ts",
    "seed:mm": "tsx scripts/seed_market_maker.ts"
  },
  "dependencies": {
    "@repo/database": "*",
    "@repo/types": "*",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.10",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.45.0",
    "ioredis": "^5.3.2",
    "jose": "^5.9.6",
    "node-cron": "^3.0.0",
    "p-limit": "^4.0.0",
    "p-retry": "^5.1.2",
    "p-timeout": "^6.1.2",
    "pg": "^8.12.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "socket.io": "^4.8.1",
    "yahoo-finance2": "^2.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.7.8",
    "@types/node-cron": "^3.0.0",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.34.0",
    "supertest": "^7.1.4",
    "tsx": "4.19.1",
    "typescript": "5.9.2",
    "vitest": "^4.0.16"
  }
