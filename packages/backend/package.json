{
  "name": "@repo/backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed_admin.ts && tsx scripts/seed_market_maker.ts",
    "seed:admin": "tsx scripts/seed_admin.ts",
    "seed:mm": "tsx scripts/seed_market_maker.ts"
  },
  "dependencies": {
    "@repo/database": "*",
    "@repo/types": "*",
    "axios": "catalog:",
    "bcryptjs": "catalog:",
    "dayjs": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "ioredis": "catalog:",
    "jose": "catalog:",
    "node-cron": "catalog:",
    "p-limit": "catalog:",
    "p-retry": "catalog:",
    "p-timeout": "catalog:",
    "pg": "catalog:",
    "pino": "catalog:",
    "pino-pretty": "catalog:",
    "socket.io": "catalog:",
    "yahoo-finance2": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bcryptjs": "catalog:",
    "@types/node": "catalog:",
    "@types/node-cron": "catalog:",
    "@types/pg": "catalog:",
    "@types/supertest": "catalog:",
    "eslint": "catalog:",
    "supertest": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
