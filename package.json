{
  "name": "bhcmarkets",
  "private": true,
  "packageManager": "bun@1.3.5",
  "scripts": {
    "dev": "bun run dev:services & bun run dev:apps",
    "dev:services": "bun run db:migrate && bun run --filter=@repo/backend dev",
    "dev:apps": "bun run --filter='./apps/*' dev",
    "dev:backend": "bun run --filter=@repo/backend dev",
    "dev:web": "bun run --filter=web dev",
    "dev:auth": "bun run --filter=auth dev",
    "dev:admin": "bun run --filter=admin dev",
    "dev:platform": "bun run --filter=platform dev",
    "dev:mobile": "bun run --filter=mobile start",
    "build": "bun run build:packages && bun run build:apps",
    "build:packages": "bun run --filter='./packages/*' build",
    "build:apps": "bun run --filter='./apps/*' build",
    "test": "bun run --filter='*' test",
    "test:watch": "bun run --filter='*' test:watch",
    "lint": "bun run --filter='*' lint",
    "typecheck": "bun run --filter='*' typecheck",
    "check-types": "bun run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf node_modules && bun run --filter='*' clean",
    "db:generate": "bun run --filter=@repo/database db:generate",
    "db:migrate": "bun run --filter=@repo/database db:migrate",
    "db:seed": "bun run --filter=@repo/backend db:seed"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "./eslint-config",
      "./typescript-config"
    ],
    "catalog": {
      "@babel/core": "^7.20.0",
      "@cloudflare/vitest-pool-workers": "^0.8.0",
      "@eslint/js": "^9.39.1",
      "@next/eslint-plugin-next": "^15.5.0",
      "@swc/core": "^1.15.3",
      "@types/bcryptjs": "^2.4.6",
      "@types/node": "^24.10.1",
      "@types/node-cron": "^3.0.0",
      "@types/pg": "^8.11.10",
      "@types/react": "^19.2.5",
      "@types/react-dom": "^19.2.3",
      "@types/react-grid-layout": "^1.3.6",
      "@types/supertest": "^6.0.3",
      "@types/ws": "^8.5.10",
      "@vitejs/plugin-react": "^4.4.1",
      "@vitejs/plugin-react-swc": "^4.2.2",
      "axios": "^1.6.0",
      "bcryptjs": "^2.4.3",
      "bun": "^1.3.5",
      "dayjs": "^1.11.10",
      "dotenv": "^16.6.1",
      "drizzle-kit": "^0.31.8",
      "drizzle-orm": "^0.45.1",
      "eslint": "^9.39.1",
      "eslint-config-prettier": "^10.1.1",
      "eslint-plugin-only-warn": "^1.1.0",
      "eslint-plugin-react": "^7.37.5",
      "eslint-plugin-react-hooks": "^7.0.1",
      "eslint-plugin-react-refresh": "^0.4.24",
      "eslint-plugin-turbo": "^2.5.0",
      "globals": "^16.5.0",
      "ioredis": "^5.3.2",
      "jose": "^5.9.6",
      "lightweight-charts": "^5.0.9",
      "node-cron": "^3.0.0",
      "p-limit": "^4.0.0",
      "p-retry": "^5.1.2",
      "p-timeout": "^6.1.2",
      "pg": "^8.12.0",
      "pino": "^8.17.0",
      "pino-pretty": "^10.3.0",
      "postgres": "^3.4.3",
      "prettier": "^3.6.2",
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "react-grid-layout": "^1.5.2",
      "react-resizable": "^3.0.5",
      "react-router-dom": "^7.9.4",
      "socket.io": "^4.8.1",
      "socket.io-client": "^4.8.1",
      "styled-components": "^6.1.19",
      "supertest": "^7.1.4",
      "tsx": "^4.19.1",
      "typescript": "~5.9.3",
      "typescript-eslint": "^8.46.4",
      "vite": "^7.2.4",
      "vite-tsconfig-paths": "^6.0.3",
      "vitest": "^4.0.16",
      "wrangler": "^4.57.0",
