    },
    "catalogs": {
      "mobile": {
        "expo": "~52.0.0",
        "expo-status-bar": "~2.0.1",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "react-native": "0.76.0",
        "react-router-dom": "^6.28.0",
