{
  "name": "bhcmarkets",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:backend": "turbo dev --filter=@repo/backend",
    "dev:market-data": "turbo dev --filter=@repo/market-data",
    "dev:order-engine": "turbo dev --filter=@repo/order-engine",
    "dev:apps": "turbo dev --filter=./apps/*",
    "build": "turbo build",
    "build:packages": "turbo build --filter=./packages/*",
    "start": "turbo start",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "db:generate": "turbo db:generate --filter=@repo/database",
    "db:migrate": "turbo db:migrate --filter=@repo/database",
    "db:seed": "turbo db:seed --filter=@repo/backend",
    "clean": "turbo clean && rm -rf node_modules"
  },

    "dependencies": {
    "bun": "^1.3.5",
    "node": "^24.12.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },

  "devDependencies": {
    "@swc/core": "^1.15.3",
    "drizzle-kit": "^0.31.8",
    "prettier": "^3.6.2",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  },
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*",
    "eslint-config",
    "typescript-config"
  ]
}
